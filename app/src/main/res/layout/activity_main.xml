<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidandyuk.whitenoise.MainActivity">

    <GridLayout
        android:id="@+id/mainGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/whitenoise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:onClick="whiteNoiseTapped"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:text="White 0"
            app:srcCompat="@drawable/whitenoise" />

        <ImageButton
            android:id="@+id/rain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:onClick="rainTapped"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:text="White 1"
            app:srcCompat="@drawable/rain" />

        <ImageButton
            android:id="@+id/fan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:onClick="fanTapped"
            android:scaleType="centerInside"
            android:text="White 1"
            app:srcCompat="@drawable/fan" />

        <ImageButton
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:onClick="windTapped"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/wind" />

        <ImageButton
            android:id="@+id/waves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:onClick="wavesTapped"
            android:scaleType="centerInside"
            android:text="White 0"
            app:srcCompat="@drawable/waves" />

        <ImageButton
            android:id="@+id/train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:onClick="trainTapped"
            android:scaleType="centerInside"
            android:text="White 1"
            app:srcCompat="@drawable/train" />

        <ImageButton
            android:id="@+id/dryer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:onClick="dryerTapped"
            android:scaleType="centerInside"
            android:text="White 1"
            app:srcCompat="@drawable/dryer" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:baselineAlignBottom="false"
            android:clickable="true"
            app:backgroundTint="@color/colorPrimary"
            app:elevation="11dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/timer" />

        <ImageButton
            android:id="@+id/car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:onClick="carTapped"
            android:scaleType="centerInside"
            android:text="White 1"
            app:srcCompat="@drawable/car" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
